<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fady.quiz.instructor$PlaceholderFragment"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="78dp"
            android:layout_height="102dp"
            android:id="@+id/imageView2"
            android:src="@drawable/logooo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Quiz name"
            android:id="@+id/textView6"
            android:layout_weight="2"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter quiz name"
            android:ems="10"
            android:id="@+id/quiz_name"
            android:layout_weight="2"
            android:maxLength="20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Quiz time"
            android:id="@+id/textView7"
            android:layout_weight="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text="Set time"
            android:id="@+id/button6"
            android:background="#f00f3b75"
            android:textColor="#ffffffff"
            android:onClick="showTimePickerDialog"
            android:textSize="10dp"
            android:layout_weight="0.08" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quiz date"
        android:id="@+id/textView8"
        android:layout_weight="1"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="Set Date"
        android:id="@+id/button7"
        android:background="#f00f3b75"
        android:textColor="#ffffffff"
        android:onClick="showDatePickerDialog"
        android:textSize="10dp"

        android:gravity="center"
        android:layout_weight="0.08" />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Quiz duration"
            android:id="@+id/textView10"
            android:layout_weight="4"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/duration"
            android:layout_weight="2"
            android:maxLength="20"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Subject"
            android:id="@+id/textView9"
            android:layout_weight="2"
            android:ems="10"
            android:maxLength="20"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/subjects"
           />

    </LinearLayout>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Make a Quiz"
        android:id="@+id/make_a_quiz"
        android:background="#f00f3b75"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:onClick="make_quiz"


        android:layout_marginLeft="30pt"
        android:layout_marginRight="30pt" />



</LinearLayout>
